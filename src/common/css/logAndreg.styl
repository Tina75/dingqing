@import "./mixin.styl"
.login_page
  width 100%
  height 100%
  background $background-color_all url(../../static/true.jpg) no-repeat center center
  background-size cover
  .form_contianer
    wh(420px,240px)
    ctp(420px,240px)
    padding 25px
    border-radius 5px
    text-align center
    background-color #fff
    .submit_btn
      width: 100%
      font-size: 16px
    .manage_tip
      position: absolute
      width: 120%
      top: -100px
      left: -40px
      p
        font-size: 40px
        color: #fff
      .logo
        position absolute
        top -15px
        left -82px
        width 75px
        height 75px
    .register
      color #fff
      font-size $font-size-s
      position relative
      top 50px
      .span
        color #409EFF
        cursor pointer
    .tips
      color $error-danger
      font-size 13px
      &.succ
        color $error-success
  .copyright
    position: fixed
    bottom 10%
    left 50%
    margin-left -185px
    color #fff
.form-fade-enter-active, .form-fade-leave-active
  transition: all 1s
.form-fade-enter, .form-fade-leave-active
  transform: translate3d(0, -50px, 0)
  opacity: 0
